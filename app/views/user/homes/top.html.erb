<div class="card text-white text-center" style="background-image: url(<%= asset_path('bule.jpg')%>)">

<div class='container mt-2'>

    <div class-"col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h3 class="font-weight-bold m-4 text-danger">人気商品!!</h3>
      <div class="row">
        <% @items.each do |item| %>
	        <div class="col-md-3 mb-5">
		        <%= link_to item_path(item.id) do %>
                <div class="card mr-3 mb-3" style="width: 248px;">
                <div class="card-header p-4" style="background-color: #eaeaff"><%= image_tag item.get_image, size: '200x200' %>
                </div>
                </div>
		        <% end %>
		    </div>
	    <% end %>
      </div>
    </div>
  </div>
</div>

