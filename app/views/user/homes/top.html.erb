<div class="card text-white text-center">
  <%= image_tag 'IMG_7226.jpg', size: '400', class: "card-img" %>
  <div class="card-img-overlay">
    <div class="font-weight-bold"></div>
    </div>
</div>
<div class='container mt-2'>
  <div class='row'>
    <div class-"col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h3 class="font-weight-bold m-4 text-danger">人気商品!!</h3>
      <div class="row">
        <% @items.each do |item| %>
	        <div class="col-md-3">
		        <%= link_to item_path(item.id) do %>
		         <%= image_tag item.get_image, size: '200x120' %><br>
		        <% end %>
		        <div class="text-left"><%= item.name %></div>
		        <div class="text-left">¥<%= item.without_tax_price.to_s(:delimited, delimiter: ',') %></div>
		      </div>
	      <% end %>
	      <div class='col-md-12 mt-4'>
	        <p class="text-center"><%= link_to "すべての商品を見る>", items_path %></p>
	      </div>
      </div>
    </div>
  </div>
</div>

