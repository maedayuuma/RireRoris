<div class='container'>
 <div class='row mt-4'>
   <div class="col-1"></div>
  <div class="col-sm-6 px-sm-5 offset-sm-2 mt-5">
    <h4 class="text-center mb-4">◆ ログイン ◆</h4>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <h5><%= f.label :メールアドレス %></h5>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control email" %>
  </div>

  <div class="field">
    <h5 class="mt-4"><%= f.label :パスワード %></h5>
    <h5><%= f.password_field :password, autocomplete: "current-password",class: "form-control current-password"%></h5>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン", class: 'btn btn-primary mt-3 mb-4' %>
  </div>
<% end %>

<%= render "user/shared/links" %>
</div>
</div>
</div>
