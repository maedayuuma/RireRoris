<div class='container'>
<h5 class="table-dark text-light d-inline-flex offset-sm-0 pt-2 pb-2 pl-4 pr-4 mt-5">ログイン</h5>
 <div class='row mt-4'>
  <div class="col-sm-7 px-sm-0 offset-sm-1">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <h5><%= f.label :メールアドレス %></h5>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control email" %>
  </div>

  <div class="field">
    <h5 class="mt-4"><%= f.label :パスワード %></h5>
    <h5><%= f.password_field :password, autocomplete: "current-password",class: "form-control current-password"%></h5>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン", class: 'btn btn-dark mt-3 mb-4' %>
  </div>
<% end %>

<%= render "user/shared/links" %>
