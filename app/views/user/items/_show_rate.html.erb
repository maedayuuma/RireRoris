<div class="starrate">
  <%# 平均点を算出し、round関数で切り上げ %>
    <%= all_rating %>：<%= reviews.average(:all_rating).to_f.round(1) %>

      <%# 評価数を星に置き換える %>
      <div id="average-review-rating" data-score=<%= reviews.average(:all_rating) %>></div>

      <%# jquery発火イベントを記載%>
        <script>
          raty(document.querySelector("#average-review-rating"), {
            readOnly: true,
            size: 36,
            starOff: '<%= asset_path('star-off.png') %>',
            starOn: '<%= asset_path('star-on.png') %>',
            starHalf: "<%= asset_path('star-half.png') %>",
            score: "<%= reviews.average(:all_rating) %>",
          });
        </script>
<br>
<%# 同様に、rating1なども記載する%>
</div>
