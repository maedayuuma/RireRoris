<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <%= render 'genre_search', genres: @genres %>
    </div>
<!--<div class="row">-->
    <div class="col-sm-9 my-3">
      <h3 class="font-weight-bold text-left mt-4 mb-5">◆ 商品一覧 ◆</h3>

      <div class="row">
        <% @item.each do |item| %>
        <%= link_to item_path(item.id) do %>
          <div class="col-md-6 col-lg-2">

            <div class="card mb-4" style="width: 248px;">
            <div class="card-header p-4" style="background-color: #eaeaff"><%= image_tag item.get_image, size: '200x200' %>
            <h5 class="text-left mt-2" style="color:#ea5550;">￥<%= (item.without_tax_price * 1.1).round %> </h5>
            </div>
            </div>

		      </div>
        <% end %>
        <% end %>
      </div>
      <div class="px-5 px-sm-0 mt-4 mx-auto"><%= paginate @item %></div>
 	  </div>
  </div>
</div>