<%= render 'genre_search', genres: @genres %>
<h4 class="font-weight-bold mt-3 mb-5">商品一覧</h4>
  <div class="item-list row">
    <div class="col-9 my-3">

        <table class="table flex-wrap">

          <% @item.each do |item| %>

            <%= link_to item_path(item.id) do %>
              <div class="card" style="width: 300px;">
		            <%= image_tag item.get_image, size: '300x250' %>
		              <% end %>

		               <div class="card-body">

		                 <div class="text-left card-title "><%= item.name %></div>
		                   <h5 class="text-left card-text"><strong>￥<%= item.without_tax_price.to_s(:delimited, delimiter: ',') %></strong></h5>
		                     </div>
		                   </div>

	                   <% end %>
	                 </table>
 	               </div>
               </div>
             </div>

           <div class="row">
         <div class="px-5 px-sm-0 mt-4 mx-auto"><%= paginate @item %></div>
       </div>
     </div>