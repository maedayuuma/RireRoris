<%= render 'genre_search', genres: @genres %>
<h5 class="font-weight-bold text-center mt-3 mb-5">◆ 商品一覧 ◆</h5>
<div class="row">
      <div class="col-9 my-3">

          <% @item.each do |item| %>

            <%= link_to item_path(item.id) do %>

              <div class="card" style="width: 315px;">

		            <div class="card-header p-3" style="background-color: #f9f9ff"><%= image_tag item.get_image, size: '280x250' %>
		              <% end %>

		                 <div class="text-center card-title mt-3"><%= item.name %></div>

		                   <h5 class="text-left" style="color: #ea5550"><strong>￥<%= item.without_tax_price.to_s(:delimited, delimiter: ',') %></strong></h5>
		                    </div>
		                     </div>


	                   <% end %>
 	               </div>
               </div>
            <div class="row">
         <div class="px-5 px-sm-0 mt-4 mx-auto"><%= paginate @item %></div>
       </div>
     </div>