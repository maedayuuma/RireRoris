<div class="container">
  <div class="row">
    <h3 class="table-primary d-inline-flex pl-5 pr-5 mt-5 mb-4"><%= @customer.full_name %>様の会員情報詳細</h3>
      <table class="table table-hover table-inverse">
        <tr>
          <th>会員ID</th>
          <th><%= @customer.id %></th>

          <th>氏名</th>
          <th><%= @customer.full_name %></th>

          <th>フリガナ</th>
          <th><%= @customer.full_name_kana %></th>
        </tr>

        <tr>
          <th>郵便番号</th>
          <th><%= @customer.post_code %></th>
        </tr>

        <tr>
          <th>住所</th>
          <th><%= @customer.address %></th>
        </tr>

        <tr>
          <th>電話番号</th>
          <th><%= @customer.phone_number %></th>

          <th>メールアドレス</th>
          <th><%= @customer.email %></th>
        </tr>

        <tr>
          <th>会員ステータス</th>
          <th><%= @customer.customer_status %></th>

          <th><%= link_to "編集", edit_admin_customer_path(@customer), class: "btn btn-success" %></th>

          <th><%= link_to "注文履歴一覧を見る", admin_path, class: "btn btn-primary" %></th>
        </tr>
      </table>
    </div>
  </div>
</div>


