<div class="container">
  <div class="row">
    <div class="col">
      <h5 class="text-center pl-4 pr-4 mt-5 mb-4 ml-2">◆ <%= @customer.full_name %>さんの会員詳細 ◆</h5>
        <%= form_with model: @customer, url:admin_customer_path(@customer), local:true do |f| %>
          <table class="table table-borderless">

            <tr>
              <th>会員ID</th>
              <th><%= @customer.id %></th>
            </tr>

            <tr>
              <th>氏名</th>
              <th><%= f.text_field :full_name %></th>
            </tr>


            <tr>
              <th>フリガナ</th>
              <th><%= f.text_field :full_name_kana %></th>
            </tr>

            <tr>
              <th>郵便番号</th>
              <th><%= f.text_field :post_code %></th>
            </tr>

            <tr>
              <th>住所</th>
              <th><%= f.text_area :address, size: 50 %></th>
            </tr>

            <tr>
              <th>電話番号</th>
              <th><%= f.text_field :phone_number %></th>
            </tr>

            <tr>
              <th>メールアドレス</th>
              <th><%= f.text_field :email, size: 40 %></th>
            </tr>

            <tr>
              <th>会員ステータス</th>
              <th>
              <%= f.radio_button :is_withdrawal, :false %>
              <%= f.label :is_withdrawal_false, "有効" %>

              <%= f.radio_button :is_withdrawal, :true %>
              <%= f.label :is_withdrawal_true, "退会" %>
              </th>
            </tr>

            <tr>
              <th><%= f.submit "変更を保存", class: "btn btn-primary" %></th>
            </tr>

        <% end %>
      </div>
    </div>