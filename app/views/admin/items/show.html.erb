<div class="container">
 <h3 class="table-secondary d-inline-flex pl-5 pr-5 mt-4">商品詳細</h3>
  <div class="row">
   <div class="col-3 mt-3">
    <%=image_tag @item.get_image, size: "350x350" %>
  </div>

  <div class="col-9 mt-5">
   <table class="table table-borderless">
    <tr>
     <th class="text-left ml-5">商品名</th>
     <td><%= @item.name %></td>
    </tr>

    <tr>
     <th class="text-left ml-5">商品説明</th>
     <td><%= @item.explanation %></td>
    </tr>

    <tr>
     <th class="text-left">ジャンル</th>
     <td><%= @item.genre.name %><td>
    </tr>

    <tr>
     <th class="text-left">税込価格</th>
     <td><%= @item.add_tax_sales_price.to_s(:dalimited) %>(<%= @item.without_tax_price %>)円<td>
    </tr>

    <tr>
     <th class="text-left">販売ステータス</th>
     <th class="text-success"><%= @item.is_sale ? "販売中" : "販売停止中" %></th>
    </tr>

    <tr>
      <th class="text-left">評価</th>
      <td><%= @item.reviews %></td>
    </tr>

   </table>

   <div class="text-center">
    <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
   </div>
  </div>
 </div>
</div>