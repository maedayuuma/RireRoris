<div class="container">
 <h4 class="text-center pl-5 pr-5 mt-5 mb-4">◆ 商品詳細 ◆</h4>
  <div class="row">
   <div class="col-4 mt-5">
    <%=image_tag @item.get_image, size: "300x300" %>
  </div>

  <div class="col-8 mt-5">
   <table class="table table-bordered">
    <tr>
     <th class="border-dark table-warning text-left ml-5">商品名</th>
     <td class="border border-dark"><%= @item.name %></td>
    </tr>

    <tr>
     <th class="border-dark table-warning text-left ml-5">商品説明</th>
     <td class="border border-dark"><%= @item.explanation %></td>
    </tr>

    <tr>
     <th class="border-dark table-warning text-left">ジャンル</th>
     <td class="border border-dark"><%= @item.genre.name %><td>
    </tr>

    <tr>
     <th class="border-dark table-warning text-left">税込価格</th>
     <td class="border border-dark"><%= @item.without_tax_price %>(<%= @item.add_tax_sales_price.to_s(:dalimited) %>)円<td>
    </tr>

    <tr>
     <th class="border-dark table-warning text-left">販売ステータス</th>
     <th class="border border-dark text-success"><%= @item.is_sale ? "販売中" : "販売停止中" %></th>
    </tr>

    <tr>
      <th class="border-dark table-warning text-left">評価</th>
      <td class="border border-dark"><%= @item.reviews %></td>
    </tr>

   </table>

   <div class="text-left ml-2 mb-5 mt-3">
    <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-primary" %>
   </div>
  </div>
 </div>
</div>