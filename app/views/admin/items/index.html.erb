<div class="container">
 <h5 class="text-center pt-2 pb-2 pl-5 mb-4 pr-5 mt-4">◆ 商品一覧 ◆</h5>
  <div class="row">
   <div class="col">
    <table class="table table-bordered text-center mt-2">

     <tr class="table-warning text-left">

      <th class="text-center border-dark">商品ID</th>

       <th class="text-center border-dark">商品名</th>

        <th class="text-center border-dark">税抜き価格</th>

       <th class="text-center border-dark">ジャンル</th>

      <th class="text-center border-dark">ステータス</th>
     </tr>

    <% @items.each do |item| %>
     <tr>
      <td class="text-center border-dark" style="background-color: #f9ffff;"><%= item.id %></td>
       <td class="text-center border-dark" style="background-color: #f9ffff;"><%= link_to item.name, admin_item_path(item.id) %></td>
        <td class="text-center border-dark" style="background-color: #f9ffff;"><%= item.without_tax_price %></td>
       <td class="text-center border-dark" style="background-color: #f9ffff;"><%= item.genre.name %></td>
      <td class="text-center border-dark" style="background-color: #f9ffff;"><%= item.is_sale ? "販売中" : "販売停止中" %></td>
     </tr>
    <% end %>
   </table>
  </div>
 </div>
</div>
