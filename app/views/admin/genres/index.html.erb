<div class="container">
  <div class="row">
   <div class="col mt-5">
    <h4 class="text-center pl-5 pr-5 mb-5">◆ ジャンル一覧・追加 ◆</h4>

    <%= form_with model: @genre, url:admin_genres_path, local:true do |f| %>

     <table class="table">

      <tr>
       <th>ジャンル名</th>
        <th><%= f.text_field :name, size:"35" %></th>
       <th><%= f.submit "新規登録",class: "btn btn-primary" %></th>
     </tr>
     <% end %>
    </table>

    <table class="table table-bordered">
      <tr class="table-warning">
       <th class="border-dark">ジャンル</th>
       <th class="border-dark"></th>
      </tr>

      <% @genres.each do |genre| %>
        <tr>
         <td class="border-dark" style="background-color: #f9ffff;"><%= genre.name %></td>
         <td class="border-dark" style="background-color: #f9ffff;"><%= link_to "編集", edit_admin_genre_path(genre.id), class: "btn btn-primary" %></td>
        </tr>
      <% end %>
     </table>
    </div>
  </div>
</div>


