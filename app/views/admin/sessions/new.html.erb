<div class='container'>
<h4 class="text-center mt-5 mb-4">◆ 管理者ログイン ◆</h4>
<div class='row mt-3'>
<div class="col-sm-6 px-sm-5 offset-sm-2">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <table class="table table-borderless">
    <tr>
      <td><%= f.label :email, "メールアドレス" %></td>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control email" %></td>
    </tr>

    <tr>
      <td><%= f.label :password, "パスワード" %></td>
      <td><%= f.password_field :password, autocomplete: "current-password",class: "form-control current-password" %></td>
    </tr>
  </table>

  <div class="mb-5">
    <%= f.submit "ログイン", class:"btn btn-primary" %>
  </div>
<% end %>

<%= render "admin/shared/links" %>
