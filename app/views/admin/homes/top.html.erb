<div class="container">
  <div class="row">
    <div class="col">

      <h5 class="table text-center pl-5 pr-5 mt-5 mb-5">◆ 注文履歴一覧 ◆</h5>

       <table class="table table-bordered">
         <tr class="table-warning">
           <th class="border-dark">購入日時</th>
            <th class="border-dark">購入者</th>
           <th class="border-dark">注文個数</th>
         <th class="border-dark">注文ステータス</th>
       </tr>

       <% @orders.each do |order| %>
       <tr>
         <td class="border-dark" style="background-color: #f9ffff;"><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order.id) %></td>
           <td class="border-dark" style="background-color: #f9ffff;"><%= order.customer.full_name %></td>
           <td class="border-dark" style="background-color: #f9ffff;"><%= order.order_items.sum(:quantity) %></td>
         <td class="border-dark" style="background-color: #f9ffff;"><%= order.status_i18n %></td>
        </tr>
        <% end %>
       </table>

      <%= paginate @orders %>
    </div>
  </div>
</div>